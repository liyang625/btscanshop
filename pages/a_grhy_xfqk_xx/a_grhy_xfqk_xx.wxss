@import "../../utils/common.wxss";


page{
  height:100%;
}
.container{
  height:100%;
  display: flex;
  flex-direction:column;
}

.head{
  display: block;
  background-color: white;
  height:70rpx;
  line-height:70rpx;
}

.head view{
  display: inline-block;
}

.head >view:first-child{
  margin-left: 20rpx;
}
.head >view:last-child{
  float:right;
  margin-right:20rpx;
}
.head >view:last-child view{
  color:red;
}
.line{
  border-bottom: 1rpx solid #dcdcdc;
}

.content{
  line-height: 70rpx;
  height:70rpx;
  background-color: white;
}

.content view{
  display: inline-block;
}

.content view:first-child{
  margin-left:40rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  width: 450rpx;
}

.content image{
  height:40rpx;
  width:40rpx;
  margin-top:15rpx;
  margin-right:20rpx;
  margin-left: 20rpx;
}

.f_r{
  float:right;
}


.detail{
  background-color: white;
  color: #999999;
  text-align: center;
  display: flex;
  justify-content:space-around;
}

.detail view{
  height:50rpx;
  line-height:50rpx;
  width:33.33%;
}
@import "../../utils/common.wxss";
.slide-image{  
    width: 100%;  
} 
.btn{
  border: 1px solid lightsteelblue;
  padding: 10rpx 20rpx;
  text-align:center;
}

/*顶部搜索区域*/
.top{
  width: 100%;
  height: 350rpx;
  position: relative;
}

.top .top_ct{
  position: absolute;
  bottom: 0px;
  left: 70rpx;
  width: 610rpx;
  height: 71rpx;
  background-color: #f4f4f4;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
  justify-content:center;
  align-items:center;
}

.top .top_ct .ld{
  width:50rpx;
  height:46rpx;
  margin-left:48rpx;
}

.top .top_ct input{
  height:100%;
  width:100%;
  line-height: 100%;
  margin-left:17rpx;
}

/*导航区*/
.nav{
  height: auto;
  padding-bottom: 30rpx;
  justify-content:space-around;
  flex-direction:row;
  flex-wrap:wrap;
  -webkit-box-pack: justify;
  background-color: white;
}
.nav .image{
  width: 80rpx;
  height:80rpx;
}
.nav .title{
padding: 0rpx 30rpx;
  width: 411rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top:5rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
  font-weight: bold;
  font-size: 0.8rem;
}

.nav .content{
  line-height: 40rpx;
  height:40rpx;
  color: #666666;
  padding: 10rpx 20rpx;
}
.content .image{
  width: 40rpx;
  height:40rpx;
  display: block;
  float: left;
}

.content text{
  height:40rpx;
  line-height:42rpx;
  display: block;
  float: left;
  margin-left: 10rpx;
}

.img-nav{
  height: 180rpx;
  padding: 35rpx 0rpx;
  justify-content:space-around;
  flex-direction:row;
  flex-wrap:wrap;
  margin-top:5rpx;
  -webkit-box-pack: justify;
  background-color: white;
}
.img-content{
  width: 130rpx;
  height:130rpx;
  margin:8rpx;
  float: left;
}
.img-content .image{
  width: 128rpx;
  height:128rpx;
  margin:10rpx;
  border-radius:128rpx;
}
.img-content .content{
  margin-left:10rpx;
  text-align: center;
}


.img{
  width: 100%;
  height:352rpx;
}
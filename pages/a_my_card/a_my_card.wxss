@import "../../utils/common.wxss";

.container{
  background-color: #f3f0f7;
  padding-bottom: 20rpx;
}

.top{
  background-color: #ffffff;
  border-bottom: 1rpx solid #dcdcdc;
}

.top text{
  padding: 20rpx 30rpx;
  margin: 0rpx 20rpx;
  display: inline-block;
}

.top .checked{
  border-bottom: 4rpx solid #FF5A5F;
  color: #FF5A5F;
}


.content {
    position: relative;
    height: 120px;
    line-height: 2;
    color: #fff;
    font-size: 14px;
    background-repeat: no-repeat;
    -webkit-box-pack: start;
    -webkit-box-align: center;
    display: -webkit-box;
    margin: 0;
    padding: 0;
    font-family: "Helvetica Neue",Helvetica,STHeiTi,sans-serif;
    box-sizing: border-box;
}

.content.normal{
    background-image: -webkit-gradient(radial, 115% 150%, 220, 115% 150%, 221, from(#FF5A5F), color-stop(99%, #FF5A5F), to(transparent));
    background-color: #FF8488;
}


.content.used {
    background-color: #EAAFE9;
    background-image: -webkit-gradient(radial, 115% 130%, 190, 115% 130%, 191, from(#E99DE8), color-stop(99%, #E99DE8), to(transparent))
}

.content.used:before {
    position: absolute;
    z-index: 11;
    content: '';
    left: 63%;
    bottom: -22%;
    width: 158rpx;
    height: 130rpx;
    background: url(../../images/used.png) center/100% 100% no-repeat
}

.content.expire {
    background-color: #E8E6E6;
    background-image: -webkit-gradient(radial, 115% 130%, 190, 115% 130%, 191, from(#dcdcdc), color-stop(99%, #dcdcdc), to(transparent))
}

.content.expire:before {
    position: absolute;
    z-index: 11;
    content: '';
    left: 63%;
    bottom: -22%;
    width: 158rpx;
    height: 130rpx;
    background: url(../../images/expired.png) center/100% 100% no-repeat
}

.coupon-detail{
  margin: 0;
  padding: 0;
  font-family: "Helvetica Neue",Helvetica,STHeiTi,sans-serif;
  padding-left: 20rpx;
  -webkit-box-flex: 40;
  box-sizing: border-box;
  display: block;
  line-height: 2;
  color: #fff;
}

.content:after{
    content: '';
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 5px;
    background-image: -webkit-gradient(radial, 10 6, 4, 10 6, 5, from(#fff), color-stop(10%, #fff), to(rgba(0,201,255,0)));
    background-size: 15px 10px;
    background-repeat: repeat-x;
    box-sizing: border-box;
}

.coupon-title{
    line-height: 1.5;
    margin: 0;
    padding: 0;
    font-family: "Helvetica Neue",Helvetica,STHeiTi,sans-serif;
    box-sizing: border-box;
    display: block;
    font-size: 1.15rem;
}

.coupon-type{
    line-height: normal;
    padding-left: 5%;
    padding-right: 5%;
    -webkit-box-align: center;
    -webkit-box-pack: center;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    font-family: "Helvetica Neue",Helvetica,STHeiTi,sans-serif;
    box-sizing: border-box;
    font-size: 2.4rem;
}

.coupon-type view{
  display: inline-block;
}

.coupon-unit{
  font-size: 22px;
  box-sizing: border-box;
  line-height: normal;
  text-align: -webkit-match-parent;
}

.li{
    margin: 30rpx 30rpx 0rpx;
    border-radius: 10px;
    overflow: hidden;
    background-color: #fff;
}

.info{
  padding: 30rpx 20rpx;
  -webkit-box-pack: justify;
  -webkit-box-align: center;
  display: -webkit-box;
  box-sizing: border-box;
  color: #222;  
}

.foot{
  text-align:center;
  padding: 40rpx 20rpx 20rpx 20rpx;
}